<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:id="@+id/loan_shark_layout"
  android:orientation="vertical"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  >
<LinearLayout
  android:orientation="horizontal"
  android:layout_width="fill_parent"
  android:layout_height="wrap_content"
  >
<TextView
  android:id="@+id/loan_statement"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:textColor="#ffffff"
  android:text="You got my money yet?"
  />
</LinearLayout>
<SeekBar
    android:id="@+id/loan_amount_slide"
    android:layout_width="180px" 
    android:layout_height="wrap_content" 
    android:textSize="20px"
/>
<TextView
  android:id="@+id/loan_amount"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:gravity="center"
  android:textSize="18px"
  android:textColor="#ffffff"
  android:paddingLeft="8px"
  android:text="0"
  />

<LinearLayout
  android:orientation="horizontal"
  android:layout_width="fill_parent"
  android:layout_height="wrap_content"
  >
<Button
  android:id="@+id/loan_pay_cancel"
  android:text="Cancel"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  />
<Button
  android:id="@+id/loan_pay_confirm"
  android:text="Pay"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  />
<Button
  android:id="@+id/loan_refresh"
  android:text="Refresh"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  />
</LinearLayout>
</LinearLayout>